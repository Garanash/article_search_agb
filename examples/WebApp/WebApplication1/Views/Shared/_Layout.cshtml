<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Алмазгеобур OCR</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            /* Золотая цветовая палитра */
            --primary-gradient: linear-gradient(135deg, #D4AF37 0%, #B8860B 100%);
            --secondary-gradient: linear-gradient(135deg, #F4E4BC 0%, #D4AF37 100%);
            --success-gradient: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            --warning-gradient: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
            --danger-gradient: linear-gradient(135deg, #dc3545 0%, #fd7e14 100%);
            --info-gradient: linear-gradient(135deg, #17a2b8 0%, #6f42c1 100%);
            
            /* Основные цвета */
            --primary-color: #D4AF37;
            --secondary-color: #F4E4BC;
            --success-color: #28a745;
            --warning-color: #ffc107;
            --danger-color: #dc3545;
            --info-color: #17a2b8;
            
            /* Темные цвета */
            --dark-primary: #1a1a1a;
            --dark-secondary: #2c2c2c;
            --dark-accent: #D4AF37;
            --dark-text: #ffffff;
            --dark-border: #D4AF37;
            
            /* Светлые цвета */
            --light-primary: #F4E4BC;
            --light-secondary: #f8f9fa;
            --light-accent: #fff8e1;
            --light-text: #1a1a1a;
            --light-border: #D4AF37;
            
            /* Тени */
            --shadow-sm: 0 2px 4px rgba(212, 175, 55, 0.2);
            --shadow-md: 0 4px 8px rgba(212, 175, 55, 0.3);
            --shadow-lg: 0 8px 16px rgba(212, 175, 55, 0.4);
            --shadow-xl: 0 12px 24px rgba(212, 175, 55, 0.5);
            
            /* Радиусы */
            --radius-sm: 8px;
            --radius-md: 12px;
            --radius-lg: 16px;
            --radius-xl: 24px;
        }

        * {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        body {
            background: linear-gradient(135deg, var(--dark-primary) 0%, var(--dark-secondary) 100%);
            background-attachment: fixed;
            color: var(--dark-text);
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Навигация */
        .navbar {
            background: linear-gradient(90deg, rgba(0, 0, 0, 0.95) 0%, rgba(34, 34, 34, 0.95) 100%) !important;
            backdrop-filter: blur(30px);
            border-bottom: 2px solid var(--primary-color);
            box-shadow: var(--shadow-xl);
            padding: 1rem 0;
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.8rem;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-decoration: none !important;
            padding: 0.5rem 1rem !important;
            border-radius: var(--radius-md);
            position: relative;
            overflow: hidden;
            letter-spacing: -0.5px;
        }

        .navbar-brand::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .navbar-brand:hover::before {
            left: 100%;
        }

        .navbar-brand i {
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-right: 10px;
        }

        .navbar-nav .nav-link {
            color: var(--dark-text) !important;
            font-weight: 600;
            padding: 0.75rem 1.25rem !important;
            border-radius: var(--radius-md);
            margin: 0 0.25rem;
            position: relative;
            overflow: hidden;
        }

        .navbar-nav .nav-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: var(--primary-gradient);
            transition: left 0.3s ease;
            z-index: -1;
        }

        .navbar-nav .nav-link:hover::before {
            left: 0;
        }

        .navbar-nav .nav-link:hover {
            color: white !important;
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        /* Поисковая панель */
        .search-bar-fixed {
            background: linear-gradient(90deg, rgba(0, 0, 0, 0.9) 0%, rgba(34, 34, 34, 0.9) 100%);
            backdrop-filter: blur(25px);
            border-bottom: 2px solid var(--primary-color);
            padding: 1.25rem 0;
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: var(--shadow-lg);
        }

        .form-control {
            background: rgba(255, 255, 255, 0.1) !important;
            border: 2px solid transparent !important;
            color: white !important;
            border-radius: var(--radius-xl);
            padding: 0.75rem 1.25rem;
            font-size: 1rem;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.15) !important;
            border-color: var(--primary-color) !important;
            box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25) !important;
            transform: scale(1.02);
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.7) !important;
        }

        .input-group-text {
            background: var(--primary-gradient) !important;
            border: none !important;
            color: white !important;
            border-radius: var(--radius-xl) 0 0 var(--radius-xl);
            padding: 0.75rem 1.25rem;
        }

        .btn-outline-secondary {
            background: var(--secondary-gradient) !important;
            border: none !important;
            color: white !important;
            border-radius: 0 var(--radius-xl) var(--radius-xl) 0;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-outline-secondary:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
            filter: brightness(1.1);
        }

        /* Карточки */
        .card {
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.12) 0%, rgba(255, 255, 255, 0.08) 100%);
            backdrop-filter: blur(25px);
            border: 1px solid rgba(212, 175, 55, 0.2);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-lg);
            overflow: hidden;
            position: relative;
            margin: 0 0.5rem;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--primary-gradient);
            opacity: 0.8;
        }

        .card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: var(--shadow-xl);
            border-color: rgba(212, 175, 55, 0.4);
        }

        .card-header {
            background: linear-gradient(135deg, rgba(212, 175, 55, 0.9) 0%, rgba(184, 134, 11, 0.8) 100%);
            color: white;
            font-weight: 700;
            border: none;
            padding: 1.25rem 1.5rem;
            font-size: 1.1rem;
            letter-spacing: 0.5px;
        }

        .card-body {
            padding: 1.5rem;
        }

        /* Таблица */
        .table {
            color: var(--dark-text);
            border-radius: var(--radius-md);
            overflow: hidden;
            border-collapse: separate;
            border-spacing: 0;
        }

        .table thead th {
            background: linear-gradient(135deg, rgba(212, 175, 55, 0.95) 0%, rgba(184, 134, 11, 0.9) 100%);
            color: white;
            border: none;
            padding: 1.25rem 1rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.8px;
            font-size: 0.85rem;
            position: relative;
        }

        .table thead th::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: rgba(255, 255, 255, 0.3);
        }

        .table tbody tr {
            background: rgba(255, 255, 255, 0.03);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border-bottom: 1px solid rgba(212, 175, 55, 0.1);
        }

        .table tbody tr:hover {
            background: rgba(255, 255, 255, 0.08);
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        .table td {
            border: none;
            padding: 1.25rem 1rem;
            vertical-align: middle;
            transition: all 0.3s ease;
        }

        /* Бейджи */
        .badge {
            padding: 0.5rem 1rem;
            border-radius: var(--radius-md);
            font-weight: 600;
            font-size: 0.85rem;
        }

        .bg-primary { background: var(--primary-gradient) !important; }
        .bg-secondary { background: var(--secondary-gradient) !important; }
        .bg-success { background: var(--success-gradient) !important; }
        .bg-warning { background: var(--warning-gradient) !important; }
        .bg-danger { background: var(--danger-gradient) !important; }
        .bg-info { background: var(--info-gradient) !important; }

        /* Кнопки */
        .btn {
            border-radius: var(--radius-md);
            font-weight: 600;
            padding: 0.75rem 1.5rem;
            border: none;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            letter-spacing: 0.3px;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.6s ease;
        }

        .btn:hover::before {
            left: 100%;
        }

        .btn-primary {
            background: var(--primary-gradient) !important;
            color: white !important;
            box-shadow: var(--shadow-md);
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-xl);
            filter: brightness(1.1);
        }

        .btn-success {
            background: var(--success-gradient) !important;
            color: white !important;
            box-shadow: var(--shadow-md);
        }

        .btn-success:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-xl);
        }

        .btn-danger {
            background: var(--danger-gradient) !important;
            color: white !important;
            box-shadow: var(--shadow-md);
        }

        .btn-danger:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-xl);
        }

        /* Герой секция */
        .hero-section {
            background: linear-gradient(135deg, rgba(212, 175, 55, 0.15) 0%, rgba(184, 134, 11, 0.1) 100%);
            backdrop-filter: blur(30px);
            border-radius: var(--radius-xl);
            padding: 3rem 2rem;
            margin: 1.5rem 0;
            border: 2px solid rgba(212, 175, 55, 0.3);
            text-align: center;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow-xl);
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: var(--primary-gradient);
            opacity: 0.05;
            animation: rotate 30s linear infinite;
        }

        @@keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        .hero-title {
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 2.8rem;
            font-weight: 800;
            margin-bottom: 1rem;
            position: relative;
            z-index: 1;
            letter-spacing: -0.5px;
        }

        .hero-subtitle {
            color: rgba(255, 255, 255, 0.85);
            font-size: 1.2rem;
            font-weight: 400;
            position: relative;
            z-index: 1;
            opacity: 0.9;
        }



        /* Пагинация */
        .pagination .page-link {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: var(--dark-text);
            border-radius: var(--radius-md);
            margin: 0 0.25rem;
            transition: all 0.3s ease;
        }

        .pagination .page-link:hover {
            background: var(--primary-gradient);
            border-color: var(--primary-color);
            color: white;
            transform: translateY(-2px);
        }

        .pagination .page-item.active .page-link {
            background: var(--primary-gradient);
            border-color: var(--primary-color);
            color: white;
        }

        /* Модальные окна */
        .modal-content {
            background: linear-gradient(135deg, rgba(26, 26, 26, 0.95) 0%, rgba(44, 44, 44, 0.95) 100%);
            backdrop-filter: blur(20px);
            border: 1px solid var(--primary-color);
            border-radius: var(--radius-lg);
            color: var(--dark-text);
            max-height: 80vh;
            overflow: hidden;
        }

        .modal-header {
            background: var(--primary-gradient);
            color: white;
            border: none;
            border-radius: var(--radius-lg) var(--radius-lg) 0 0;
            padding: 1rem;
        }

        .modal-body {
            max-height: calc(80vh - 120px);
            overflow-y: auto;
            padding: 1rem;
        }

        .modal-footer {
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            padding: 1rem;
        }

        /* Принудительное отображение модального окна */
        .modal.show {
            display: block !important;
        }

        .modal.show .modal-dialog {
            transform: none !important;
        }

        /* Дополнительные ограничения для модального окна */
        #detailsModal .modal-dialog {
            max-width: 900px !important;
            width: 90% !important;
        }

        #detailsModal .modal-content {
            max-height: 80vh !important;
        }

        /* Алерты */
        .alert {
            border-radius: var(--radius-md);
            border: none;
            padding: 1rem 1.5rem;
            margin-bottom: 1rem;
        }

        .alert-success {
            background: var(--success-gradient);
            color: white;
        }

        .alert-danger {
            background: var(--danger-gradient);
            color: white;
        }

        /* Футер */
        .footer {
            background: linear-gradient(90deg, var(--dark-primary) 0%, var(--dark-secondary) 100%);
            backdrop-filter: blur(20px);
            border-top: 2px solid var(--primary-color);
            color: rgba(255, 255, 255, 0.8);
            padding: 3rem 0;
            margin-top: 4rem;
            position: relative;
            bottom: 0;
            width: 100%;
            z-index: 10;
        }
        
        /* Основной контейнер для правильного позиционирования футера */
        .main-content-wrapper {
            min-height: calc(100vh - 300px); /* Минимальная высота для выталкивания футера вниз */
            padding-bottom: 2rem;
            flex: 1; /* Растягиваемся на всю доступную высоту */
        }
        
        /* Стили для поиска и кнопки выхода */
        .search-container {
            position: relative;
            padding: 1rem 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .search-form {
            margin-bottom: 0;
            width: auto; /* Убираем 100% ширину */
            max-width: 280px; /* Делаем еще короче */
            flex: 1; /* Растягиваемся на доступное пространство */
            margin-right: 0; /* Убираем margin-right, так как используем flexbox */
        }
        
        .logout-button {
            position: relative; /* Меняем на relative для flexbox */
            z-index: 20;
            min-width: 100px; /* Фиксированная ширина кнопки */
            flex-shrink: 0; /* Запрещаем сжатие */
        }
        
        /* Адаптивность для поиска */
        @@media (min-width: 1400px) {
            .search-form {
                max-width: 320px; /* Делаем еще короче на больших экранах */
            }
        }
        
        @@media (max-width: 1200px) {
            .search-form {
                max-width: 250px; /* Еще короче на средних экранах */
            }
        }
        
        @@media (max-width: 768px) {
            .search-container {
                flex-direction: column; /* Вертикальное расположение на мобильных */
                align-items: stretch;
            }
            
            .search-form {
                max-width: 100%;
                margin-bottom: 1rem;
            }
            
            .logout-button {
                text-align: center;
                min-width: auto;
            }
        }

        .footer h5 {
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: 700;
        }

        /* Анимации */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card, .hero-section {
            animation: fadeInUp 0.6s ease-out;
        }

        /* Двухколоночный макет */
        .main-content-wrapper {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem 1rem;
            min-height: calc(100vh - 300px); /* Минимальная высота для выталкивания футера вниз */
            padding-bottom: 2rem;
            flex: 1; /* Растягиваемся на всю доступную высоту */
        }

        .two-column-layout {
            display: grid;
            grid-template-columns: 400px 1fr;
            gap: 2rem;
            align-items: start;
        }

        .left-panel {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(20px);
            border-radius: var(--radius-lg);
            padding: 1.5rem;
            border: 1px solid rgba(212, 175, 55, 0.2);
            box-shadow: var(--shadow-lg);
            position: sticky;
            top: 120px;
        }

        .right-panel {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(20px);
            border-radius: var(--radius-lg);
            padding: 1.5rem;
            border: 1px solid rgba(212, 175, 55, 0.2);
            box-shadow: var(--shadow-lg);
        }

        .panel-header {
            background: var(--primary-gradient);
            color: white;
            padding: 1rem 1.5rem;
            margin: -1.5rem -1.5rem 1.5rem -1.5rem;
            border-radius: var(--radius-lg) var(--radius-lg) 0 0;
            font-weight: 700;
            font-size: 1.2rem;
            letter-spacing: 0.5px;
        }

        /* Адаптивность */
        @@media (max-width: 1200px) {
            .two-column-layout {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }
            
            .left-panel {
                position: static;
            }
        }

        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }
            
            .navbar-brand {
                font-size: 1.5rem;
            }
            
            .card-body {
                padding: 1.5rem;
            }
            
            .main-content-wrapper {
                padding: 1rem 0.5rem;
            }
        }

        /* Специальные стили для кнопки выхода */
        .btn-warning {
            background: var(--warning-gradient) !important;
            color: var(--dark-text) !important;
            border: 2px solid white !important;
            font-size: 1rem !important;
            font-weight: 700 !important;
            padding: 0.75rem 1.5rem !important;
            border-radius: var(--radius-md);
            transition: all 0.3s ease;
        }

        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
            filter: brightness(1.1);
        }

        /* Стили для календаря */
        .mini-calendar {
            background: rgba(255, 255, 255, 0.1);
            border-radius: var(--radius-md);
            overflow: hidden;
        }

        .calendar-header-mini {
            background: var(--primary-gradient);
            color: white;
        }

        .calendar-day-header-mini {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            font-weight: 700;
        }

        .calendar-day-mini {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: var(--dark-text);
        }

        .calendar-day-mini:hover {
            background: rgba(255, 255, 255, 0.1);
            transform: scale(1.1);
        }

        .calendar-day-mini.today {
            background: var(--success-gradient);
            color: white;
            font-weight: 700;
        }

        .calendar-day-mini.has-birthday {
            background: var(--warning-gradient);
            color: white;
        }

        /* Стили для ссылок в таблице */
        .table thead th a {
            color: white !important;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
        }

        .table thead th a:hover {
            color: rgba(255, 255, 255, 0.8) !important;
            text-decoration: none;
        }

        .table thead th a .fas.fa-sort {
            opacity: 0.7;
        }

        .table thead th a:hover .fas.fa-sort {
            opacity: 1;
        }

        .table thead th a .fas.fa-sort-up,
        .table thead th a .fas.fa-sort-down {
            opacity: 1;
            color: rgba(255, 255, 255, 0.9);
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
