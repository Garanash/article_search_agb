    <div class="search-bar-fixed" style="position: relative;">
        <div class="container search-container">
            <form id="searchForm" class="search-form">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Поиск по распознанному тексту..." 
                           id="searchInput" autocomplete="off" />
                    <button type="button" class="btn btn-outline-secondary" onclick="performSearch()">
                        <i class="fas fa-search"></i> Найти
                    </button>
                    <button type="button" class="btn btn-outline-info" onclick="clearSearch()" title="Очистить поиск">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </form>
            
            <!-- Кнопка выхода -->
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="logout-button">
                    <a href="/Account/Logout" class="btn btn-warning">
                        <i class="fas fa-sign-out-alt me-2"></i>
                        Выйти
                    </a>
                </div>
