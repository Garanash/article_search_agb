                    </h5>
                    <p>Система распознавания текста с визиток</p>
                </div>
                <div class="col-md-6 text-end">
                    <p>&copy; @DateTime.Now.Year - Алмазгеобур. Все права защищены.</p>
                    <p>Технологии распознавания текста</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
    // Функция для AJAX-поиска
    function performSearch() {
        const searchInput = document.querySelector('input[name="searchString"]');
        const searchString = searchInput.value;
        
        // Перенаправляем на главную страницу с параметрами поиска
        window.location.href = `/Home/Index?searchString=${encodeURIComponent(searchString)}`;
    }
    
    // Функция для очистки поиска
    function clearSearch() {
        const searchInput = document.querySelector('input[name="searchString"]');
        searchInput.value = '';
        // Перенаправляем на главную страницу без параметров поиска
        window.location.href = '/Home/Index';
    }
    
    // Обработчик для формы поиска
    document.addEventListener('DOMContentLoaded', function() {
        const searchForm = document.getElementById('searchForm');
        if (searchForm) {
            searchForm.addEventListener('submit', function(e) {
                e.preventDefault();
                performSearch();
            });
        }
        
        // Добавляем обработчик для Enter в поле поиска
        const searchInput = document.getElementById('searchInput');
        if (searchInput) {
            searchInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    performSearch();
                }
            });
        }
    });
    </script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>